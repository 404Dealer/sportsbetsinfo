# SportsBetsInfo Configuration
# Copy this file to .env and fill in your values

# Database
SPORTSBETS_DB_PATH=data/sportsbets.db

# Kalshi API (https://kalshi.com/api) - RSA Key Authentication
# Get your API key ID from Kalshi's API Keys page
SPORTSBETS_KALSHI_API_KEY=your-api-key-id-here
# Path to your RSA private key file (.pem)
SPORTSBETS_KALSHI_PRIVATE_KEY_PATH=./kalshi_private_key.pem

# The Odds API (https://the-odds-api.com)
SPORTSBETS_ODDS_API_KEY=your-odds-api-key-here

# Schema version for data compatibility
SPORTSBETS_SCHEMA_VERSION=1.0.0

# Rate limits (requests per second)
SPORTSBETS_KALSHI_RATE_LIMIT=10
SPORTSBETS_ODDS_API_RATE_LIMIT=1

# Logging
SPORTSBETS_LOG_LEVEL=INFO
